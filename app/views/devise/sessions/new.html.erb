<% page_title "Sign in" %>

<section ng-controller="AuthController">
  <div id="content-page">
    <header class="entry-header">
      <h1 class="mb-0">
        <div class="container">
          Sign in
        </div>
      </h1>
    </header>
  </div>

  <div class="container pt-4 pt-lg-5 pb-4">
    <div class="row">
      <div class="col-0 col-md-3"></div>
      <div class="col-0 col-md-6">
        <% if notice %><div class="alert alert-success" role="alert"><%= notice %></div><% end %>
        <% if alert %><div class="alert alert-danger" role="alert"><%= alert %></div><% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: '' %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: '' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Sign in", class: "btn text-white bg-blue my-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      <div class="col-0 col-md-3"></div>
    </div>
  </div>
</section>